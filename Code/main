Ship ship;
Invaders invaders;
ArrayList<Bullet> bullets = new ArrayList <Bullet>();
int delay = 0;
int score = 0;

void setup() {
  size(1000, 700);
  initialiseGame();
  invaders.createInvaders();
}

void draw() {
  background(0);
  displayScore();
  drawBullets();

  invaders.drawInvaders();
  if (delay%20 == 0) {
    invaders.move();
  }

  ship.drawShip();
  ship.move(); // enables ship movement
  ship.shoot(); // enables ship to shoot
  if (delay%10 == 0) {
    ship.canShoot = true;
  }
  // delay so that player cannot hold space bar and create what looks like an endless bullet
  delay++;
}

void displayScore() {
  textSize(24);
  fill(255);
  text("Score: " + score, 10, 30);
}

void drawBullets() {
  for (int i = 0; i < bullets.size(); i++) {
    Bullet b = bullets.get(i);
    b.drawBullet();
    // deleting bullets arraylist once bullet disappears off screen to keep arrayList 
    // relatively small
    if (b.y + b.ht/2 < 0) {
      bullets.remove(i);
    }
  }
}

// ------- initialisation -------
void initialiseGame() {
  ship = new Ship(width/2);
  bullets.clear();
  invaders = new Invaders();
}
