// handling key events
void keyPressed() {
  if (ship != null) { // null check
    if (keyCode == LEFT) {
      ship.moveLeft = true;
    } 
    if (keyCode == RIGHT) {
      ship.moveRight = true;
    } 
    if (keyCode == ' ') { 
      ship.shooting = true;
    }
  }
}

void keyReleased() {
  if (ship != null) { // null check
    if (keyCode == LEFT) { // stops ship from moving in that direction if key is released
      ship.moveLeft = false;
    }
    if (keyCode == RIGHT) {
      ship.moveRight = false;
    } 
    if (keyCode == ' ') {
      ship.shooting = false;
    }
  }
}
